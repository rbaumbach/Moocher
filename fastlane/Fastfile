default_platform(:ios)

platform :ios do

  before_all do
    puts "Doin' some fastlane..."
  end

  desc "Runs the specs"
  lane :specs do
    swiftlint(strict: true,
              quiet: true,
              config_file: ".swiftlint.yml",
              executable: "Pods/SwiftLint/swiftlint")

    scan(scheme: "Moocher",
         output_style: "rspec")
         
    scan(scheme: "MoocherPolling",
         output_style: "rspec")
  end

  after_all do |lane|
      puts "ðŸŒ® ðŸŒ® ðŸŒ®  Taco Time! ðŸŒ® ðŸŒ® ðŸŒ®"
  end

  error do |lane, exception|
    puts "uh oh...."
  end

end
